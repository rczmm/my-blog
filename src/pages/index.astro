---
import AetherLayout from '../layouts/AetherLayout.astro';
import BlogCarousel from '../components/BlogCarousel.astro';
import SystemTimeline from '../components/SystemTimeline.astro';

// 获取所有博客文章
const allPosts = await Astro.glob('./posts/*.md');

// 按发布日期降序排序
allPosts.sort((a, b) => new Date(b.frontmatter.pubDate).valueOf() - new Date(a.frontmatter.pubDate).valueOf());

// 格式化日期的函数
function formatDate(date: string) {
  return new Date(date).toLocaleDateString('zh-CN', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<AetherLayout title="我的博客">
  <!-- 博客轮播图 -->
  <div class="carousel-container glass-card">
    <BlogCarousel posts={allPosts} />
  </div>
  
  <!-- 统计信息卡片 -->
  <section class="stats-section">
    <div class="stats-grid">
      <div class="stat-card glass-card">
        <div class="stat-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line><polyline points="10 9 9 9 8 9"></polyline></svg>
        </div>
        <div class="stat-content">
          <h3>{allPosts.length}</h3>
          <p>日志总数</p>
        </div>
      </div>
      
      <div class="stat-card glass-card">
        <div class="stat-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20.59 13.41l-7.17 7.17a2 2 0 0 1-2.83 0L2 12V2h10l8.59 8.59a2 2 0 0 1 0 2.82z"></path><line x1="7" y1="7" x2="7.01" y2="7"></line></svg>
        </div>
        <div class="stat-content">
          <h3>{new Set(allPosts.flatMap(post => post.frontmatter.tags || [])).size}</h3>
          <p>激活标签</p>
        </div>
      </div>
      
      <div class="stat-card glass-card">
        <div class="stat-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path><circle cx="12" cy="12" r="3"></circle></svg>
        </div>
        <div class="stat-content">
          <h3>1.2K</h3>
          <p>访客数量</p>
        </div>
      </div>
      
      <div class="stat-card glass-card">
        <div class="stat-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"></circle><polyline points="12 6 12 12 16 14"></polyline></svg>
        </div>
        <div class="stat-content">
          <h3>{Math.ceil((Date.now() - new Date('2023-01-01').getTime()) / (1000 * 60 * 60 * 24))}</h3>
          <p>运行天数</p>
        </div>
      </div>
    </div>
  </section>

  <!-- 系统更新日志 -->
  <div class="chart-container glass-card">
    <SystemTimeline posts={allPosts} />
  </div>

  <!-- 最新文章区域 -->
  <section class="latest-posts">
    <div class="section-header">
      <h2>最新日志 <span class="blinking-cursor">_</span></h2>
      <a href="/archive" class="more-link">查看所有数据 &rarr;</a>
    </div>
    <div class="posts-grid">
      {allPosts.length === 0 ? (
        <div class="no-posts glass-card">
          <p>暂无数据</p>
        </div>
      ) : (
        allPosts.slice(0, 8).map((post, index) => (
          <article class="post-card glass-card">
            <a href={post.url} class="card-link-overlay" aria-label={`Read ${post.frontmatter.title}`}></a>
            
            <div class="post-card-layout">
              <!-- 左侧图标区域 (仿照统计卡片) -->
              <div class="post-icon-section">
                <div class="stat-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line><polyline points="10 9 9 9 8 9"></polyline></svg>
                </div>
                <div class="post-index">日志_0{index + 1}</div>
              </div>

              <!-- 右侧内容区域 -->
              <div class="post-content-section">
                <h3 class="post-title">
                  {post.frontmatter.title}
                </h3>
                
                <div class="post-meta-row">
                  <time class="post-date">{formatDate(post.frontmatter.pubDate)}</time>
                  {post.frontmatter.author && (
                    <span class="post-author">@{post.frontmatter.author}</span>
                  )}
                </div>

                <p class="post-description">
                  {post.frontmatter.description}
                </p>
                
                <div class="post-action">
                  <span class="read-more-text">ACCESS_DATA &gt;&gt;</span>
                </div>
              </div>
            </div>
          </article>
        ))
      )}
    </div>
  </section>
</AetherLayout>

<style>
  /* 调整轮播图容器 */
  .carousel-container {
    padding: 0; /* 移除内边距，让轮播图充满 */
    margin-bottom: 2rem;
    overflow: hidden;
    background: transparent; /* 轮播图自带样式，不需要额外背景 */
    box-shadow: none; /* 移除阴影 */
    border: none; /* 移除边框 */
    backdrop-filter: none;
  }

  /* 调整图表容器 */
  .chart-container {
    padding: 1.5rem;
    margin: 2rem 0;
  }

  /* 统计区域 */
  .stats-section {
    margin: 2rem 0;
  }
  
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
  }
  
  .stat-card {
    padding: 1.5rem;
    display: flex;
    align-items: center;
    gap: 1rem;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .stat-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(6, 182, 212, 0.15); /* 青色阴影 */
    border-color: var(--color-primary-start);
  }
  
  .stat-icon {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(6, 182, 212, 0.1);
    color: var(--color-primary-start);
    border: 1px solid rgba(6, 182, 212, 0.2);
  }

  .stat-icon svg {
    width: 24px;
    height: 24px;
  }
  
  .stat-content h3 {
    margin: 0;
    font-size: 1.8rem;
    background: linear-gradient(to right, var(--color-primary-start), var(--color-primary-end));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-family: var(--font-mono);
  }
  
  .stat-content p {
    margin: 0;
    color: var(--color-neutral);
    font-size: 0.8rem;
    letter-spacing: 0.1em;
    font-family: var(--font-mono);
  }

  /* 最新文章 */
  .latest-posts {
    margin: 4rem 0;
  }
  
  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-bottom: 2rem;
    border-bottom: 1px solid var(--color-neutral-light);
    padding-bottom: 0.5rem;
  }
  
  .section-header h2 {
    font-size: 1.5rem;
    margin: 0;
    font-family: var(--font-mono);
    color: var(--color-text-title);
    letter-spacing: 0.05em;
  }

  .blinking-cursor {
    color: var(--color-primary-start);
    animation: blink 1s step-end infinite;
  }
  
  .more-link {
    color: var(--color-primary-start);
    font-weight: 500;
    transition: all 0.2s;
    font-family: var(--font-mono);
    font-size: 0.9rem;
    text-decoration: none;
  }
  
  .more-link:hover {
    color: var(--color-primary-end);
    text-shadow: 0 0 5px rgba(6, 182, 212, 0.5);
  }
  
  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }
  
  .no-posts {
    grid-column: 1 / -1;
    text-align: center;
    padding: 3rem;
    color: var(--color-neutral);
    font-family: var(--font-mono);
  }
  
  .post-card {
    height: 100%;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    overflow: hidden;
    position: relative;
  }
  
  .card-link-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 10;
    cursor: pointer;
  }
  
  /* 移除之前的左侧渐变条 */
  
  /* 移除之前的角落装饰 */

  .post-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(6, 182, 212, 0.15); /* 与统计卡片一致的青色阴影 */
    border-color: var(--color-primary-start);
  }

  /* 悬停时让图标也发光 */
  .post-card:hover .stat-icon {
    background: rgba(6, 182, 212, 0.2);
    box-shadow: 0 0 10px rgba(6, 182, 212, 0.3);
  }
  
  .post-card-layout {
    display: flex;
    gap: 1.5rem;
    padding: 1.5rem;
    height: 100%;
    align-items: flex-start;
  }

  .post-icon-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    flex-shrink: 0;
  }

  .post-index {
    font-size: 0.7rem;
    color: var(--color-neutral);
    font-family: var(--font-mono);
    letter-spacing: 0.05em;
  }

  .post-content-section {
    flex: 1;
    display: flex;
    flex-direction: column;
    height: 100%;
    min-width: 0; /* 防止内容溢出 */
  }

  .post-title {
    margin: 0 0 0.5rem 0;
    font-size: 1.2rem;
    line-height: 1.3;
    font-family: var(--font-sans);
    color: var(--color-text-title);
    transition: color 0.2s;
    background: linear-gradient(to right, var(--color-text-title) 50%, var(--color-primary-start) 50%);
    background-size: 200% 100%;
    background-position: 0 0;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  
  .post-card:hover .post-title {
    background-position: -100% 0;
  }
  
  .post-meta-row {
    display: flex;
    gap: 1rem;
    font-size: 0.75rem;
    color: var(--color-neutral);
    font-family: var(--font-mono);
    margin-bottom: 1rem;
  }

  .post-description {
    color: var(--color-text-body);
    font-size: 0.9rem;
    margin-bottom: 1rem;
    flex-grow: 1;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    line-height: 1.5;
  }
  
  .post-action {
    display: flex;
    justify-content: flex-end;
    margin-top: auto;
  }

  .read-more-text {
    font-size: 0.8rem;
    font-family: var(--font-mono);
    color: var(--color-primary-start);
    opacity: 0.7;
    transition: all 0.3s ease;
    transform: translateX(0);
  }

  .post-card:hover .read-more-text {
    opacity: 1;
    transform: translateX(5px);
    text-shadow: 0 0 8px rgba(6, 182, 212, 0.4);
  }

  @keyframes blink {
    50% { opacity: 0; }
  }

  /* 响应式调整 */
  @media (max-width: 768px) {
    .section-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }
    
    .stats-grid {
      grid-template-columns: 1fr 1fr;
    }
  }
  
  @media (max-width: 480px) {
    .stats-grid {
      grid-template-columns: 1fr;
    }
  }
</style>