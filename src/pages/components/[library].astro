<script>
  function setupExampleInteractions() {
    const containers = document.querySelectorAll('.example-container');
    
    containers.forEach(container => {
      const toggleBtn = container.querySelector('.toggle-code');
      const footerBtn = container.querySelector('.footer-toggle-btn');
      const sourceArea = container.querySelector('.example-source');
      const copyBtn = container.querySelector('.copy-code');
      const arrow = container.querySelector('.arrow');

      const toggleCode = () => {
        const isActive = sourceArea?.classList.toggle('active');
        if (arrow) {
          arrow.style.transform = isActive ? 'rotate(0deg)' : 'rotate(180deg)';
        }
      };

      toggleBtn?.addEventListener('click', toggleCode);
      footerBtn?.addEventListener('click', toggleCode);

      // Â§çÂà∂‰ª£Á†ÅÂäüËÉΩ
      copyBtn?.addEventListener('click', async () => {
        const code = (copyBtn as HTMLElement).dataset.code;
        if (code) {
          try {
            await navigator.clipboard.writeText(code);
            const originalIcon = copyBtn.querySelector('.btn-icon')!.textContent;
            copyBtn.querySelector('.btn-icon')!.textContent = '‚úÖ';
            setTimeout(() => {
              copyBtn.querySelector('.btn-icon')!.textContent = originalIcon;
            }, 2000);
          } catch (err) {
            console.error('Failed to copy code: ', err);
          }
        }
      });
    });
  }

  // ÂàùÂßãÂä†ËΩΩ
  setupExampleInteractions();
  // Â§ÑÁêÜ Astro È°µÈù¢ÂàáÊç¢
  document.addEventListener('astro:after-swap', setupExampleInteractions);
</script>
