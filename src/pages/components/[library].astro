---
import AetherLayout from '../../layouts/AetherLayout.astro';
import { componentLibraries } from '../../data/components';
import { getCollection, getEntry } from 'astro:content';
import ComponentRenderer from '../../components/ComponentRenderer.astro';
import { Code } from 'astro:components';

// Ëá™Âä®ËØªÂèñÁªÑ‰ª∂Ê∫êÁ†Å
const rawComponents = import.meta.glob('../../components/lib/*.astro', { as: 'raw', eager: true });

export async function getStaticPaths() {
  return componentLibraries.map((lib) => ({
    params: { library: lib.id },
    props: { library: lib },
  }));
}

const { library } = Astro.props;
const title = `${library.name} - ÁªÑ‰ª∂Â∫ìÊ£ÄÁ¥¢`;

// Âª∫Á´ã ID Âà∞Ê∫êÁ†ÅÁöÑÊò†Â∞Ñ
const sourceMap: Record<string, string> = {};
Object.entries(rawComponents).forEach(([path, content]) => {
  const fileName = path.split('/').pop()?.replace('.astro', '');
  if (fileName) {
    // ÁÆÄÂçïÁöÑ ID ÂåπÈÖçÈÄªËæëÔºöGlassCard -> glass-card
    const id = fileName.replace(/([a-z0-9])([A-Z])/g, '$1-$2').toLowerCase();
    sourceMap[id] = content;
  }
});

// Ëé∑ÂèñÊâÄÊúâÁõ∏ÂÖ≥ÁöÑÁªÑ‰ª∂ÂÜÖÂÆπ
const componentContents = await Promise.all(
  library.components.map(async (comp) => {
    const entry = await getEntry('components', comp.id);
    if (entry) {
      const { Content } = await entry.render();
      return { id: comp.id, Content, data: entry.data };
    }
    return { id: comp.id, Content: null, data: null };
  })
);

const contentMap = Object.fromEntries(componentContents.map(c => [c.id, c]));
