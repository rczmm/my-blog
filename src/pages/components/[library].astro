<AetherLayout title={title}>
  <div class="library-container">
    <!-- È°∂ÈÉ®ÂØºËà™ÊåáÁ§∫ -->
    <div class="terminal-nav glass-card">
      <span class="path">> SYSTEM / CORE / COMPONENTS / <span class="current">{library.id.toUpperCase()}</span></span>
      <span class="cursor">_</span>
      <a href="/components" class="back-link">&laquo; ËøîÂõûÁ¥¢Âºï</a>
    </div>

    <header class="library-header glass-card">
      <div class="header-main">
        <div class="icon-badge">
          <span class="lib-icon">{library.icon}</span>
        </div>
        <div class="lib-info">
          <h1 class="lib-title">{library.name}</h1>
          <p class="lib-desc">{library.description}</p>
        </div>
      </div>
      <div class="header-stats">
        <div class="stat-item">
          <span class="label">ÁªÑ‰ª∂ÈÖçÈ¢ù</span>
          <span class="value">{library.components.length}</span>
        </div>
        <div class="stat-item">
          <span class="label">Áä∂ÊÄÅ</span>
          <span class="value status-active">ACTIVE</span>
        </div>
      </div>
    </header>

    <div class="components-stack">
      {library.components.map((comp, index) => {
        const componentContent = contentMap[comp.id];
        const { Content, data } = componentContent || {};
        const displayName = data?.name || comp.name;
        const displayDescription = data?.description || comp.description;
        const displayUsage = data?.usage || comp.usage;
        const sourceCode = sourceMap[comp.id];

        return (
          <section class="component-section" id={comp.id}>
            <div class="section-header">
              <h2 class="component-title">
                <span class="title-index">0{index + 1}.</span> {displayName}
              </h2>
              <p class="component-intro">{displayDescription}</p>
            </div>

            <div class="example-container">
              <!-- È¢ÑËßàÂå∫Âüü -->
              <div class="example-preview">
                <ComponentRenderer id={comp.id} />
              </div>

              <!-- Êìç‰ΩúÊ†è -->
              <div class="example-toolbar">
                <button class="tool-btn copy-code" title="Â§çÂà∂‰ª£Á†Å" data-code={sourceCode}>
                  <span class="btn-icon">üìã</span>
                </button>
                <button class="tool-btn toggle-code" title="Êü•ÁúãÊ∫êÁ†Å">
                  <span class="btn-icon">{'</>'}</span>
                </button>
              </div>

              <!-- Ê∫êÁ†ÅÂå∫Âüü (ÊäòÂè†) -->
              <div class="example-source">
                {sourceCode ? (
                  <Code code={sourceCode} lang="astro" theme="github-dark" />
                ) : (
                  <div class="no-source">SOURCE_NOT_FOUND</div>
                )}
                <div class="collapse-footer">
                  <button class="footer-toggle-btn">
                    <span class="arrow">‚ñ≤</span> Êî∂Ëµ∑‰ª£Á†Å
                  </button>
                </div>
              </div>
            </div>

            <div class="doc-content">
              {Content && (
                <div class="markdown-content">
                  <Content />
                </div>
              )}

              {data?.props && data.props.length > 0 && (
                <div class="props-table-wrapper">
                  <h3 class="props-title">Attributes</h3>
                  <table class="props-table">
                    <thead>
                      <tr>
                        <th>ÂèÇÊï∞</th>
                        <th>ËØ¥Êòé</th>
                        <th>Á±ªÂûã</th>
                        <th>ÈªòËÆ§ÂÄº</th>
                      </tr>
                    </thead>
                    <tbody>
                      {data.props.map((prop: any) => (
                        <tr>
                          <td class="prop-name">{prop.name}</td>
                          <td class="prop-desc">{prop.description}</td>
                          <td class="prop-type">`{prop.type}`</td>
                          <td class="prop-default">{prop.default || '-'}</td>
                        </tr>
                      ))}
                    </tbody>
                  </table>
                </div>
              )}
            </div>
          </section>
        );
      })}
    </div>
  </div>
</AetherLayout>

