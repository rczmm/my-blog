---
import AetherLayout from '../../layouts/AetherLayout.astro';
import { componentLibraries } from '../../data/components';

const title = "组件库 - 核心模块检索";
const description = "探索精心设计的 UI 组件与业务方案";
---

<AetherLayout title={title}>
  <div class="components-container">
    <!-- 顶部导航指示 -->
    <div class="terminal-nav glass-card">
      <span class="path">> SYSTEM / CORE / COMPONENTS</span>
      <span class="cursor">_</span>
    </div>

    <header class="page-header glass-card">
      <div class="header-main">
        <h1 class="page-title">组件库 <span class="version">v2.0</span></h1>
        <p class="page-description">{description}</p>
      </div>
      <div class="header-stats">
        <div class="stat-item">
          <span class="label">索引库</span>
          <span class="value">{componentLibraries.length}</span>
        </div>
        <div class="stat-item">
          <span class="label">总组件</span>
          <span class="value">{componentLibraries.reduce((acc, lib) => acc + lib.components.length, 0)}</span>
        </div>
      </div>
    </header>

    <div class="libraries-grid">
      {componentLibraries.map((lib, index) => (
        <a href={`/components/${lib.id}`} class="library-card data-chip">
          <div class="chip-header">
            <span class="chip-id">LIB_0{index + 1}</span>
            <div class="chip-decoration-line"></div>
          </div>
          
          <div class="library-content">
            <div class="library-icon-box">
              <span class="lib-icon">{lib.icon}</span>
            </div>
            
            <div class="library-info">
              <h2 class="library-name">{lib.name}</h2>
              <p class="library-desc">{lib.description}</p>
              
              <div class="library-footer">
                <span class="component-count">
                  <span class="count-val">{lib.components.length}</span> UNITS
                </span>
                <span class="arrow">&rarr;</span>
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</AetherLayout>

<style>
  .components-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .terminal-nav {
    padding: 0.75rem 1.5rem;
    margin-bottom: 2rem;
    font-family: var(--font-mono);
    font-size: 0.85rem;
    color: var(--color-primary-start);
    border: 1px dashed var(--color-primary-start);
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .cursor {
    animation: blink 1s infinite;
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2.5rem;
    margin-bottom: 3rem;
    position: relative;
    overflow: hidden;
  }

  .page-title {
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--color-text-title);
    margin: 0 0 0.5rem 0;
    display: flex;
    align-items: baseline;
    gap: 1rem;
  }

  .version {
    font-size: 0.9rem;
    font-family: var(--font-mono);
    color: var(--color-primary-start);
    background: rgba(6, 182, 212, 0.1);
    padding: 0.2rem 0.6rem;
    border-radius: 4px;
  }

  .page-description {
    color: var(--color-text-body);
    font-size: 1rem;
    opacity: 0.7;
    max-width: 500px;
  }

  .header-stats {
    display: flex;
    gap: 2rem;
    padding-left: 2rem;
    border-left: 1px solid var(--glass-border);
  }

  .stat-item {
    text-align: right;
  }

  .stat-item .label {
    display: block;
    font-size: 0.75rem;
    font-family: var(--font-mono);
    color: var(--color-neutral);
    margin-bottom: 0.25rem;
  }

  .stat-item .value {
    font-size: 1.75rem;
    font-weight: 800;
    color: var(--color-primary-start);
    font-family: var(--font-mono);
  }

  .libraries-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(380px, 1fr));
    gap: 2rem;
  }

  /* Data Chip Styling */
  .data-chip {
    background: var(--glass-bg);
    backdrop-filter: var(--glass-blur);
    border: 1px solid var(--glass-border);
    border-radius: 4px;
    padding: 1.5rem;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    display: block;
  }

  .data-chip:hover {
    transform: translateY(-5px);
    border-color: var(--color-primary-start);
    box-shadow: 0 10px 30px var(--glass-shadow);
  }

  .chip-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .chip-id {
    font-family: var(--font-mono);
    font-size: 0.75rem;
    color: var(--color-neutral);
    letter-spacing: 0.1em;
  }

  .chip-decoration-line {
    flex: 1;
    height: 1px;
    background: linear-gradient(90deg, var(--color-neutral-light), transparent);
  }

  .library-content {
    display: flex;
    gap: 1.5rem;
  }

  .library-icon-box {
    width: 60px;
    height: 60px;
    background: rgba(6, 182, 212, 0.05);
    border: 1px solid rgba(6, 182, 212, 0.1);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    flex-shrink: 0;
    transition: all 0.3s ease;
  }

  .data-chip:hover .library-icon-box {
    background: rgba(6, 182, 212, 0.1);
    transform: scale(1.1);
  }

  .library-name {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-text-title);
    margin: 0 0 0.5rem 0;
  }

  .library-desc {
    font-size: 0.9rem;
    color: var(--color-text-body);
    line-height: 1.5;
    margin-bottom: 1.5rem;
    opacity: 0.8;
  }

  .library-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .component-count {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: var(--color-neutral);
  }

  .count-val {
    color: var(--color-primary-start);
    font-weight: 600;
  }

  .arrow {
    color: var(--color-primary-start);
    opacity: 0.5;
    transition: transform 0.3s ease;
  }

  .data-chip:hover .arrow {
    transform: translateX(5px);
    opacity: 1;
  }

  @media (max-width: 768px) {
    .page-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1.5rem;
    }
    .header-stats {
      padding-left: 0;
      border-left: none;
      width: 100%;
      justify-content: space-between;
    }
  }
</style>
