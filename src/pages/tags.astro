const tagCounts = allPosts.reduce((acc, post) => {
  const tags = post.frontmatter.tags || [];
  tags.forEach((tag: string) => {
    acc[tag] = (acc[tag] || 0) + 1;
  });
  return acc;
}, {} as Record<string, number>);

