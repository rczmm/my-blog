---
import AetherLayout from '../layouts/AetherLayout.astro';

// Ëé∑ÂèñÊâÄÊúâÂçöÂÆ¢ÊñáÁ´†
const allPosts = await Astro.glob('./posts/*.md');

// ÁªüËÆ°Ê†áÁ≠æ
const tagCounts = allPosts.reduce((acc, post) => {
  const tags = post.frontmatter.tags || [];
  tags.forEach((tag: string) => {
    acc[tag] = (acc[tag] || 0) + 1;
  });
  return acc;
}, {} as Record<string, number>);

// ÊåâÊñáÁ´†Êï∞ÈáèÊéíÂ∫èÊ†áÁ≠æ
const sortedTags = Object.entries(tagCounts).sort((a, b) => b[1] - a[1]);

function formatDate(date: string) {
  return new Date(date).toLocaleDateString('zh-CN', {
    year: 'numeric',
    month: '2-digit',
    day: '2-digit'
  }).replace(/\//g, '-');
}
---

<AetherLayout title="Ê†áÁ≠æ - Aether Lab">
  <div class="tags-container">
    <!-- È°µÈù¢Â§¥ÈÉ® -->
    <header class="tags-header glass-card">
      <h1>TAG_INDEX</h1>
      <div class="tags-stats">
        <span class="stat-item">
          <span class="label">TAGS:</span>
          <span class="value">{sortedTags.length}</span>
        </span>
        <span class="divider">|</span>
        <span class="stat-item">
          <span class="label">LOGS:</span>
          <span class="value">{allPosts.length}</span>
        </span>
      </div>
    </header>

    <!-- Ê†áÁ≠æ‰∫ë -->
    <section class="tag-cloud-section glass-card">
      <div class="section-title">CLOUD_VISUALIZATION</div>
      <div class="tag-cloud">
        {sortedTags.map(([tag, count], index) => (
          <a 
            href={`#tag-${encodeURIComponent(tag)}`} 
            class="tag-cloud-item"
            style={`
              font-size: ${Math.max(0.8, Math.min(1.5, 0.8 + count * 0.1))}rem;
              opacity: ${Math.min(1, 0.5 + count * 0.1)};
            `}
          >
            <span class="bracket">[</span>
            {tag}
            <span class="tag-count">:{count}</span>
            <span class="bracket">]</span>
          </a>
        ))}
      </div>
    </section>

    <!-- Ê†áÁ≠æËØ¶ÊÉÖÂàóË°® -->
    <section class="tags-detail">
      {sortedTags.map(([tag, count], index) => {
        const tagPosts = allPosts.filter(post => 
          post.frontmatter.tags?.includes(tag)
        ).sort((a, b) => 
          new Date(b.frontmatter.pubDate).valueOf() - new Date(a.frontmatter.pubDate).valueOf()
        );
        
        return (
          <div class="tag-section glass-card" id={`tag-${encodeURIComponent(tag)}`}>
            <div class="tag-header">
              <h3 class="tag-title">
                <span class="hash">#</span>{tag}
              </h3>
              <span class="tag-count-badge">COUNT: {count}</span>
            </div>
            
            <div class="tag-posts">
              {tagPosts.map((post) => (
                <article class="tag-post-item">
                  <a href={post.url} class="item-link-overlay"></a>
                  <div class="post-status"></div>
                  <div class="post-info">
                    <div class="post-meta-top">
                      <span class="post-id">LOG_{post.url?.split('/').pop()?.slice(0,4).toUpperCase()}</span>
                      <time class="post-date">{formatDate(post.frontmatter.pubDate)}</time>
                    </div>
                    <h4 class="post-title">
                      {post.frontmatter.title}
                    </h4>
                    <p class="post-description">
                      {post.frontmatter.description}
                    </p>
                  </div>
                  <div class="post-arrow">&gt;</div>
                </article>
              ))}
            </div>
          </div>
        );
      })}
    </section>

    {sortedTags.length === 0 && (
      <div class="empty-state glass-card">
        <div class="empty-icon">üè∑Ô∏è</div>
        <h2>NO_TAGS_FOUND</h2>
        <p>System database empty. Initialize new data packets with tags.</p>
      </div>
    )}
  </div>
</AetherLayout>

