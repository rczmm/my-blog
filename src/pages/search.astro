  <script define:vars={{ searchData }}>
    // å®¢æˆ·ç«¯æœç´¢é€»è¾‘
    const searchInput = document.getElementById('searchInput');
    const searchBtn = document.getElementById('searchBtn');
    const resultsGrid = document.getElementById('resultsGrid');
    const resultsCount = document.getElementById('resultsCount');
    const suggestionTags = document.querySelectorAll('.suggestion-tag');

    // æœç´¢å‡½æ•°
    function performSearch(query) {
      if (!query) {
        renderResults(searchData);
        return;
      }

      const lowerQuery = query.toLowerCase();
      const filteredData = searchData.filter(item => {
        const titleMatch = item.title.toLowerCase().includes(lowerQuery);
        const descMatch = item.description && item.description.toLowerCase().includes(lowerQuery);
        const tagMatch = item.tags.some(tag => tag.toLowerCase().includes(lowerQuery));
        return titleMatch || descMatch || tagMatch;
      });

      renderResults(filteredData);
    }

    // æ¸²æŸ“ç»“æœ
    function renderResults(results) {
      resultsCount.textContent = `åŒ¹é…: ${results.length}`;
      
      if (results.length === 0) {
        resultsGrid.innerHTML = `
          <div class="no-results glass-card">
            <p>æœªæ‰¾åˆ°åŒ¹é…æ•°æ®</p>
          </div>
        `;
        return;
      }

      resultsGrid.innerHTML = results.map((post, index) => `
        <article class="result-card data-chip">
          <div class="chip-header">
            <span class="chip-id">NO.${String(index + 1).padStart(3, '0')}</span>
            <div class="chip-decoration-line"></div>
          </div>
          <div class="result-content">
            <h3 class="result-title">
              <a href="${post.url}">${post.title}</a>
            </h3>
            
            <p class="result-description">
              ${post.description || ''}
            </p>
            
            <div class="result-meta">
              <span class="result-date">
                ${new Date(post.pubDate).toLocaleDateString('zh-CN')}
              </span>
              
              ${post.tags && post.tags.length > 0 ? `
                <div class="result-tags">
                  ${post.tags.slice(0, 3).map(tag => `<span class="result-tag">${tag}</span>`).join('')}
                </div>
              ` : ''}
            </div>
          </div>
        </article>
      `).join('');
    }

    // äº‹ä»¶ç›‘å¬
    searchInput.addEventListener('input', (e) => {
      performSearch(e.target.value);
    });

    searchBtn.addEventListener('click', () => {
      performSearch(searchInput.value);
    });

    suggestionTags.forEach(tag => {
      tag.addEventListener('click', () => {
        const tagValue = tag.getAttribute('data-tag');
        searchInput.value = tagValue;
        performSearch(tagValue);
      });
    });
  </script>

