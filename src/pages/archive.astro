---
import AetherLayout from '../layouts/AetherLayout.astro';

// 获取所有博客文章
const allPosts = await Astro.glob('./posts/*.md');

// 按发布日期降序排序
allPosts.sort((a, b) => new Date(b.frontmatter.pubDate).valueOf() - new Date(a.frontmatter.pubDate).valueOf());

// 按年份分组
const postsByYear = allPosts.reduce((acc, post) => {
  const year = new Date(post.frontmatter.pubDate).getFullYear();
  if (!acc[year]) {
    acc[year] = [];
  }
  acc[year].push(post);
  return acc;
}, {} as Record<number, any[]>);

const years = Object.keys(postsByYear).map(Number).sort((a, b) => b - a);

function formatDate(date: string) {
  return new Date(date).toLocaleDateString('zh-CN', {
    month: '2-digit',
    day: '2-digit'
  }).replace(/\//g, '-');
}
---

<AetherLayout title="归档 - Aether Lab">
  <div class="archive-container">
    <!-- 页面头部 -->
    <header class="archive-header glass-card">
      <div class="header-content">
        <h1>DATA_ARCHIVE</h1>
        <div class="archive-stats">
          <div class="stat-pill">
            <span class="label">TOTAL_LOGS:</span>
            <span class="value">{allPosts.length}</span>
          </div>
          <div class="stat-pill">
            <span class="label">TIME_SPAN:</span>
            <span class="value">{years.length} YRS</span>
          </div>
        </div>
      </div>
    </header>

    <!-- 归档内容 -->
    <div class="archive-content">
      {years.map(year => (
        <section class="year-section">
          <div class="year-marker glass-card">
            <span class="year-number">{year}</span>
            <span class="year-line"></span>
            <span class="year-count">[{postsByYear[year].length}]</span>
          </div>
          
          <div class="posts-list">
            {postsByYear[year].map((post, index) => (
              <article class="archive-item glass-card">
                <a href={post.url} class="item-link-overlay"></a>
                <div class="item-date">
                  {formatDate(post.frontmatter.pubDate)}
                </div>
                <div class="item-info">
                  <h3 class="item-title">
                    {post.frontmatter.title}
                  </h3>
                  {post.frontmatter.tags && (
                    <div class="item-tags">
                      {post.frontmatter.tags.slice(0, 3).map((tag: string) => (
                        <span class="tag">#{tag}</span>
                      ))}
                    </div>
                  )}
                </div>
                <div class="item-status">
                  <span class="status-ok">LOGGED</span>
                </div>
              </article>
            ))}
          </div>
        </section>
      ))}
    </div>

    {allPosts.length === 0 && (
      <div class="empty-state glass-card">
        <div class="empty-icon">⚠</div>
        <h2>NO_DATA_FOUND</h2>
        <p>Database is empty. Waiting for input...</p>
      </div>
    )}
  </div>
</AetherLayout>

<style>
  .archive-container {
    max-width: 900px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .archive-header {
    padding: 2rem;
    text-align: center;
  }

  .header-content h1 {
    font-family: var(--font-mono);
    color: var(--color-text-title);
    font-size: 2rem;
    margin-bottom: 1.5rem;
    letter-spacing: 0.1em;
  }

  .archive-stats {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
  }

  .stat-pill {
    font-family: var(--font-mono);
    font-size: 0.9rem;
    padding: 0.5rem 1rem;
    border: 1px solid var(--color-neutral-light);
    border-radius: 20px;
    background: rgba(255, 255, 255, 0.3);
  }

  .stat-pill .label {
    color: var(--color-neutral);
    margin-right: 0.5rem;
  }

  .stat-pill .value {
    color: var(--color-primary-start);
    font-weight: bold;
  }

  /* 年份区块 */
  .year-section {
    position: relative;
  }

  .year-marker {
    display: flex;
    align-items: center;
    padding: 0.5rem 1.5rem;
    margin-bottom: 1.5rem;
    width: fit-content;
  }

  .year-number {
    font-size: 1.5rem;
    font-weight: bold;
    color: var(--color-text-title);
    font-family: var(--font-mono);
  }

  .year-line {
    width: 20px;
    height: 2px;
    background: var(--color-primary-start);
    margin: 0 1rem;
  }

  .year-count {
    color: var(--color-neutral);
    font-family: var(--font-mono);
    font-size: 0.9rem;
  }

  /* 文章列表 */
  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding-left: 1rem;
    border-left: 1px dashed var(--color-neutral-light);
    margin-left: 1.5rem;
  }

  .archive-item {
    display: flex;
    align-items: center;
    padding: 1rem 1.5rem;
    gap: 2rem;
    transition: all 0.3s ease;
    position: relative;
  }

  .item-link-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 10;
  }

  .archive-item:hover {
    transform: translateX(10px);
    border-color: var(--color-primary-start);
    box-shadow: 0 5px 15px rgba(6, 182, 212, 0.1);
  }

  .item-date {
    font-family: var(--font-mono);
    color: var(--color-primary-start);
    font-size: 0.9rem;
    white-space: nowrap;
  }

  .item-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.3rem;
  }

  .item-title {
    margin: 0;
    font-size: 1.1rem;
    color: var(--color-text-title);
    transition: color 0.2s;
  }

  .archive-item:hover .item-title {
    color: var(--color-primary-end);
  }

  .item-tags {
    display: flex;
    gap: 0.5rem;
  }

  .tag {
    font-size: 0.75rem;
    color: var(--color-neutral);
    font-family: var(--font-mono);
  }

  .item-status {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: var(--color-neutral-light);
    border: 1px solid var(--color-neutral-light);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
  }

  .archive-item:hover .item-status {
    color: var(--color-primary-start);
    border-color: var(--color-primary-start);
  }

  /* 空状态 */
  .empty-state {
    text-align: center;
    padding: 4rem;
  }

  .empty-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
    color: var(--color-neutral);
  }

  .empty-state h2 {
    font-family: var(--font-mono);
    color: var(--color-text-title);
  }

  .empty-state p {
    color: var(--color-neutral);
    font-family: var(--font-mono);
  }

  @media (max-width: 768px) {
    .archive-item {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.5rem;
    }

    .item-status {
      display: none;
    }
    
    .posts-list {
      margin-left: 0.5rem;
    }
  }
</style>
