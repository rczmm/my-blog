<div id="particles-container">
  <canvas id="aether-canvas"></canvas>
</div>

<style>
  #particles-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    pointer-events: none; /* 让鼠标事件穿透，除非我们需要交互 */
    overflow: hidden;
  }
  
  canvas {
    display: block;
  }
</style>

<script>
  // 粒子配置
  const CONFIG = {
    particleCount: 80, // 节点数量
    connectionDistance: 150, // 连线距离阈值
    mouseDistance: 200, // 鼠标互动距离
    particleColor: 'rgba(156, 163, 175, 0.5)', // #9CA3AF
    lineColor: 'rgba(6, 182, 212, 0.2)', // #06B6D4
    lineHighlightColor: 'rgba(59, 130, 246, 0.6)', // #3B82F6
    speed: 0.5,
  };

  class Particle {
    x: number;
    y: number;
    vx: number;
    vy: number;
    size: number;

    constructor(canvasWidth: number, canvasHeight: number) {
      this.x = Math.random() * canvasWidth;
      this.y = Math.random() * canvasHeight;
      this.vx = (Math.random() - 0.5) * CONFIG.speed;
      this.vy = (Math.random() - 0.5) * CONFIG.speed;
      this.size = Math.random() * 2 + 1; // 1-3px
    }

    update(canvasWidth: number, canvasHeight: number) {
      this.x += this.vx;
      this.y += this.vy;

      // 边界反弹
      if (this.x < 0 || this.x > canvasWidth) this.vx *= -1;
      if (this.y < 0 || this.y > canvasHeight) this.vy *= -1;
    }

    draw(ctx: CanvasRenderingContext2D) {
      ctx.beginPath();
      ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
      ctx.fillStyle = CONFIG.particleColor;
      ctx.fill();
    }
  }

  function initParticles() {
    const canvas = document.getElementById('aether-canvas') as HTMLCanvasElement;
    if (!canvas) return;

    const ctx = canvas.getContext('2d');
    if (!ctx) return;

    let width = window.innerWidth;
    let height = window.innerHeight;
    canvas.width = width;
    canvas.height = height;

    let particles: Particle[] = [];
    
    // 初始化粒子
    // 根据屏幕大小调整粒子数量 (移动端减少)
    const count = width < 768 ? CONFIG.particleCount / 2 : CONFIG.particleCount;
    for (let i = 0; i < count; i++) {
      particles.push(new Particle(width, height));
    }

    // 鼠标位置
    let mouse = { x: -1000, y: -1000 };

    window.addEventListener('mousemove', (e) => {
      mouse.x = e.clientX;
      mouse.y = e.clientY;
    });

    window.addEventListener('resize', () => {
      width = window.innerWidth;
      height = window.innerHeight;
      canvas.width = width;
      canvas.height = height;
    });

    function animate() {
      if (!ctx) return;
      ctx.clearRect(0, 0, width, height);

      // 更新和绘制粒子
      particles.forEach(p => {
        p.update(width, height);
        p.draw(ctx);
      });

      // 绘制连线
      for (let i = 0; i < particles.length; i++) {
        for (let j = i + 1; j < particles.length; j++) {
          const p1 = particles[i];
          const p2 = particles[j];
          const dx = p1.x - p2.x;
          const dy = p1.y - p2.y;
          const distance = Math.sqrt(dx * dx + dy * dy);

          if (distance < CONFIG.connectionDistance) {
            // 计算连线透明度
            const opacity = 1 - (distance / CONFIG.connectionDistance);
            
            // 检查鼠标是否在附近
            const mouseDx = mouse.x - p1.x;
            const mouseDy = mouse.y - p1.y;
            const mouseDist = Math.sqrt(mouseDx * mouseDx + mouseDy * mouseDy);
            
            ctx.beginPath();
            ctx.moveTo(p1.x, p1.y);
            ctx.lineTo(p2.x, p2.y);
            
            if (mouseDist < CONFIG.mouseDistance) {
              ctx.strokeStyle = CONFIG.lineHighlightColor;
              ctx.lineWidth = 1;
            } else {
              ctx.strokeStyle = CONFIG.lineColor;
              ctx.lineWidth = 0.5;
            }
            
            ctx.globalAlpha = opacity;
            ctx.stroke();
            ctx.globalAlpha = 1;
          }
        }
      }

      // 鼠标吸引效果 (可选: 让附近的粒子向鼠标轻微移动)
      particles.forEach(p => {
        const dx = mouse.x - p.x;
        const dy = mouse.y - p.y;
        const dist = Math.sqrt(dx*dx + dy*dy);
        if (dist < 200) {
             const forceDirectionX = dx / dist;
             const forceDirectionY = dy / dist;
             const force = (200 - dist) / 200;
             const directionX = forceDirectionX * force * 0.5; // 吸引力度
             const directionY = forceDirectionY * force * 0.5;
             p.x += directionX;
             p.y += directionY;
        }
      });

      requestAnimationFrame(animate);
    }

    animate();
  }

  // 确保在页面加载后运行 (支持 Astro View Transitions)
  document.addEventListener('astro:page-load', initParticles);
  // 如果没有使用 View Transitions，也需要常规加载
  document.addEventListener('DOMContentLoaded', initParticles);
</script>
