      </slot>
    </div>
  )}

  { (Astro.slots.has('subheader') || subtitle) && (
    <div class="card-subheader">
      <slot name="subheader">
        <span class="subheader-text">{subtitle}</span>
      </slot>
    </div>
  )}

  <div class="card-content">
    <slot>
      <div class="card-demo-content">
