<style>
  .file-uploader-preview {
    width: 280px;
    background: rgba(0, 0, 0, 0.3);
    border: 1px dashed rgba(6, 182, 212, 0.3);
    border-radius: 8px;
    padding: 1.5rem;
  }

  .upload-zone {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
    opacity: 0.6;
  }

  .icon { font-size: 2rem; }
  .msg { 
    font-family: var(--font-mono); 
    font-size: 0.8rem;
    color: var(--color-primary-start);
  }
  .sub-msg { font-size: 0.6rem; color: var(--color-neutral); }

  .upload-progress {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .progress-bar {
    height: 4px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 2px;
    overflow: hidden;
  }

  .fill {
    height: 100%;
    width: 42%;
    background: var(--color-primary-start);
    box-shadow: 0 0 10px var(--color-primary-start);
  }

  .status {
    display: flex;
    justify-content: space-between;
    font-family: var(--font-mono);
    font-size: 0.7rem;
  }

  .file-name { color: var(--color-neutral); }
  .percent { color: var(--color-primary-start); }
</style>
